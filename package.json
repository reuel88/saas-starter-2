{
  "name": "saas-starter-2",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "ui:add": "pnpm --filter @repo/ui ui:add",
    "dev": "turbo dev",
    "check": "check-dependency-version-consistency .",
    "check:fix": "check-dependency-version-consistency . --fix",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "build": "turbo build",
    "check:lint:test:build": "pnpm check:fix && turbo lint && turbo run test && turbo run build"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "autoprefixer": "^10.4.19",
    "check-dependency-version-consistency": "^4.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "turbo": "^1.13.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
